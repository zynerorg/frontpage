{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://zyner.org/schemas/webconfigschema.json",
    "title": "JSON Schema for ZynerOrg/Website configuration",
    "description": "JSON Schema for ZynerOrg/Website configuration",
    "type": "object",
    "properties": {
        "partners": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "required": ["id", "title", "icon"]
            }
        },
        "teams": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "summary": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": ["id", "title", "summary", "description"]
            }
        },
        "roles": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "weight": {
                        "type": "number"
                    }
                },
                "required": ["id", "name"]
            }
        },
        "users": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "avatar": {
                        "type": "string",
                        "nullable": true
                    },
                    "teams": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "roles": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    },
                                    "nullable": true
                                }
                            },
                            "required": ["id", "roles"]
                        }
                    },
                    "links": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "link": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            },
                            "required": ["type", "link"]
                        },
                        "nullable": true
                    }
                },
                "required": ["id", "name", "teams", "links"]
            }
        }
    },
    "required": ["teams", "roles", "users"]
}
